<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:androidprv="http://schemas.android.com/apk/prv/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:id="@+id/quickspace_content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="left|center_vertical|center_horizontal|center|start"
    android:orientation="vertical">

    <com.android.launcher3.quickspace.views.DateTextView
        android:id="@+id/clock_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left|center_vertical|center_horizontal|center|start"
        android:layout_weight="1"
        android:background="@drawable/bg_quickspace"
        android:clickable="true"
        android:fontFamily="google-sans"
        android:gravity="center"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="4dp"
        android:textColor="?attr/workspaceTextColor"
        android:textSize="@dimen/quickspace_title_size"
        style="@style/QuickSpaceText" />

    <LinearLayout
        android:id="@+id/weather_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical|center_horizontal|center|start"
        android:layout_marginTop="4dp"
        android:layout_weight="0"
        android:background="@drawable/bg_quickspace"
        android:clickable="true"
        android:gravity="left|center_vertical|center_horizontal|center|start"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/weather_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="left|center_vertical|center_horizontal|center|start"
            android:layout_marginStart="16dp"
            android:scaleType="fitXY" />

        <com.android.launcher3.quickspace.views.DoubleShadowTextView
            android:id="@+id/weather_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical|center_horizontal|center|start"
            android:layout_marginStart="6dp"
            android:drawablePadding="8dp"
            android:fontFamily="google-sans"
            android:letterSpacing="0.01"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:textColor="?attr/workspaceTextColor"
            android:textSize="@dimen/quickspace_subtitle_size"
            app:ambientShadowBlur="3dp"
            app:ambientShadowColor="?attr/workspaceAmbientShadowColor"
            app:keyShadowBlur="2dp"
            app:keyShadowColor="?attr/workspaceKeyShadowColor"
            app:keyShadowOffsetX="0.5dp"
            style="@style/QuickSpaceSubText" />
    </LinearLayout>

</LinearLayout>

